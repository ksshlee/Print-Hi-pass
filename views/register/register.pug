extends ../partials/layout

block contenthead
    style.
            form{
                text-align : center;
                font-weight : bold;
            }   

block content
    .main.container
        .row 
            //글 위치 배정
            .col-xs-7.col-md-5

            // 회원가입 form
            form(method='post' action='/auth/reg')
                br
                br
                br
                div.form-group
                    label(for='id') 아이디
                    input#name.form-control(type='text', placeholder='id' name='id')
                div.form-group
                    label(for='name') 이름
                    input#name.form-control(type='text', placeholder='name' name='name')
                div.form-group
                    label(for='email') 이메일
                    input#email.form-control(type='email', placeholder='name@email.com' name='email')
                div.form-group
                    label(for='password') 비밀번호
                    input#password.form-control(type='password' name='password')
                div.form-group
                    label(for='confirmpassword') 비밀번호 확인
                    input#confirmpassword.form-control(type='password' name='confirmpassword')
                button.btn.btn-info(type='submit') 회원가입
                br
                br
                br
                br